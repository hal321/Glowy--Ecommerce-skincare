<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs')%>
  <body>
    <nav><%- include('../../partials/nav.ejs')%></nav>
    <div class="jumbo">
      <h2>Updating an item</h2>
      <form action="/products/<%=product.id%>?_method=PUT" method="POST">
        <label for="category">Category: </label>
        <input
          type="text"
          name="category"
          id="category"
          value="<%=product.category%>"
        />
        <br />
        <br />
        <label for="skinType">Skin Type: </label>
        <input
          type="text"
          name="skinType"
          id="skinType"
          value="<%=product.skinType%>"
        />
        <br />
        <br />
        <label for="dayNight">Day/Night: </label>
        <input
          type="text"
          name="dayNight"
          id="dayNight"
          value="<%=product.dayNight%>"
        />
        <br />
        <br />
        <label for="brand">Brand: </label>
        <input type="text" name="brand" id="brand" value="<%=product.brand%>" />
        <br />
        <br />
        <label for="description">Description: </label>
        <input
          type="textarea"
          name="description"
          id="description"
          value="<%=product.description%>"
        />
        <br />
        <br />
        <label for="img">Image: </label>
        <input type="text" name="img" id="img" value="<%=product.img%>" />
        <br />
        <br />
        <label for="price">Price: </label>
        <input
          type="number"
          name="price"
          min="5"
          step=".01"
          value="<%=product.price || 0%>"
          id="price"
        />
        <br />
        <br />
        <label for="qty">Quantity: </label>
        <input type="number" name="qty" value="<%=product.qty%>" min="0" />
        <br />
        <br />
        <button class="admin" type="submit">Update Me</button>
      </form>
    </div>
    <%- include('../../partials/footer.ejs')%>
  </body>
</html>
