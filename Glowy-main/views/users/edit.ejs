<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs')%>
  <body>
    <nav><%- include('../../partials/nav.ejs')%></nav>
    <div class="jumbo">
      <h2>Updating an item</h2>
      <form action="/adminUsers/<%=user.id%>?_method=PUT" method="POST">
        <label for="username">User Name: </label>
        <input
          type="text"
          name="username"
          id="username"
          value="<%=user.username%>"
        />
        <br />
        <br />
        <label for="role">Role: </label>
        <input type="text" name="role" id="role" value="<%=user.role%>" />
        <br />
        <br />

        <input type="submit" value="Update" />
      </form>
    </div>
    <%- include('../../partials/footer.ejs')%>
  </body>
</html>
